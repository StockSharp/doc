{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "*.csproj",
            "src/**.dll"
          ],
          "cwd": ".",
          "exclude": [
            "**/obj/**",
            "**/bin/**",
          ]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "cwd": "obj"
      },
      {
        "files": [
          "api/*.md",
          "topics/**.md",
          "topics/**.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
        ],
        "exclude": [
          "obj/**",
        ]
      },
      {
        "files": ["favicon.ico","logo.png"],
        "src": "../"
      }
    ],
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "globalMetadata": {
      "_appFooter": "<span>Copyright Â© StockSharp.</span>",
      "_appFaviconPath": "favicon.ico",
      "_appLogoPath": "logo.png",
      "_enableNewTab": true
    },
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
        ]
      }
    ],
    "dest": "C:/inetpub/wwwroot/doc/ru",
    "template": [
      "default",
      "modern"
    ],
    "sitemap": {
        "baseUrl": "https://doc.stocksharp.ru",
        "priority": 0.1,
        "changefreq": "monthly",
        "fileOptions": {
            "**/api/**.yml": {
                "priority": 0.3,
                "lastmod": "2001-01-01",
            },
            "index.md": {
                "baseUrl": "https://doc.stocksharp.ru",
                "priority": 0.8,
                "changefreq": "monthly"
            },
            "topics/**.md": {
                "baseUrl": "https://doc.stocksharp.ru",
                "priority": 0.8,
                "changefreq": "monthly"
            }
        }
    },
  },
  "__pdf": {
    "content": [
      {
        "files": [
          "api/**.yml",
        ],
        "exclude": [
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": [
          "api/*.md",
          "topics/**.md",
          "topics/**.yml",
          "pdf/*"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**"
        ]
      },
      {
        "files": "pdf/toc.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
        ]
      }
    ],
    "wkhtmltopdf": {
      "additionalArguments": "--enable-local-file-access"
    },
    "dest": "C:/inetpub/wwwroot/doc/ru"
  }
}